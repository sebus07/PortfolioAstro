---
import { Image } from "astro:assets";

import thumb from "../assets/orange.png";
import thumb1 from "../assets/motaphoto.png";
import thumb2 from "../assets/planty.png";
import thumb3 from "../assets/bruche.png";
import thumb4 from "../assets/moi.png";
import thumb5 from "../assets/vintage.png";
import thumb6 from "../assets/orange.png";
import thumb7 from "../assets/orange.png";

const cards = [
  {
    title: "Motaphoto",
    imagealt: "site motaphoto",
    image: thumb1,
    href: "#",
  },
  {
    title: "Fleurs d oranger",
    imagealt: "site fleurs d'oranger",
    image: thumb,
    href: "https://orange.presta-modulo.fr/",
  },
  {
    title: "Planty",
    imagealt: "site planty",
    image: thumb2,
    href: "https://planty.presta-modulo.fr/",
  },
  {
    title: "Simpl vintage",
    imagealt: "site Simpl vintage",
    image: thumb5,
    href: "http://showroom.sebastien-koenig.fr/ ",
  },
  {
    title: "Bruche master",
    imagealt: "Site bruche master",
    image: thumb3,
    href: "http://www.soleil.presta-modulo.fr/",
  },
  {
    title: "Fitactive",
    imagealt: "Site fitactive",
    image: thumb,
    href: "https://www.fitactive.presta-modulo.fr/",
  },
  {
    title: "Koenig",
    imagealt: "site koenig",
    image: thumb4,
    href: "https://www.youtube.com/watch?v=R2KZsakOS8c",
  },
  {
    title: "portfolio_next",
    imagealt: "site portfolio_next",
    image: thumb,
    href: "https://portfolio-next-hq0ycewf2-sebuses-projects.vercel.app/",
  },
  {
    title: "Chic dressing",
    imagealt: "site chic dressing",
    image: thumb,
    href: "https://presta-modulo.fr/",
  },
  
];
---

<div class="flex my-4 items-center justify-center">
  <div class="relative w-full overflow-hidden">
    <!-- For some reason the white vignette effect don't work in this sandbox but if you uncomment the following lines in VSCode, they should work -->

    <div class="block">
      <div
        class="pointer-events-none absolute -top-1 z-10 h-20 w-full bg-gradient-to-b from-zinc-950 to-transparent"
      >
      </div>
      <div
        class="pointer-events-none absolute -bottom-1 z-10 h-20 w-full bg-gradient-to-t from-zinc-950 to-transparent"
      >
      </div>
      <div
        class="pointer-events-none absolute -left-1 z-10 h-full w-20 bg-gradient-to-r from-zinc-950 to-transparent"
      >
      </div>
      <div
        class="pointer-events-none absolute -right-1 z-10 h-full w-20 bg-gradient-to-l from-zinc-950 to-transparent"
      >
      </div>
    </div>

    <div
      id="scroller"
      class="mx-auto grid h-[450px] w-[300px] animate-skew-scroll grid-cols-1 gap-5 sm:w-[750px] sm:grid-cols-2"
    >
      <!-- These are all the same components - if you're using React, you can use a map to iterate through all of them -->
      {
        cards.map((card) => (
          <a
            target="_blank"
            href={card.href}
            class="cursor-pointer items-center bg-zinc-900 space-x-2 p-4 shadow-md transition-all hover:-translate-y-1 hover:translate-x-1 hover:scale-[1.025] hover:shadow-xl"
          >
            <div class="flex-shrink-0">
              <Image
                loading="eager"
                src={card.image}
                alt={card.imagealt}
                class="mb-4 border  border-black"
                densities={[0.5, 1, 3]}
              />
            </div>
            <div class="flex flex-col">
              <h3 class="font-semibold text-white">{card.title}</h3>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</div>
<style></style>
<script>
  //On screens lower than 640px, animation skew-scroll should translateY(-830%)
  //On screens higher than 640px, animation skew-scroll should translateY(-430%)
</script>
